    QueryTableModel qtm;
    DBFunctions db;
    int user_id;
    boolean users_found;
    ArrayList<Integer> user_ids;
    public UserLogs_GUI() {
        db = new DBFunctions();
        initComponents();
        if(initUsers()){
            user_id = jComboBoxMain.getSelectedIndex();
            users_found = true;
        }else{
            user_id = -1;
            users_found = false;
        }
    }
    
    public final boolean initUsers(){
        jComboBoxMain.removeAllItems();
       user_ids  = new ArrayList<Integer>();
       boolean loadUsers = false;
        try {
            String query = "SELECT * FROM users;";
            ResultSet rs = db.stmt.executeQuery(query);
            while (rs.next()) {
                user_ids.add(rs.getInt("id"));
                loadUsers = true;
            }
            user_ids.add(-1);
        } catch (SQLException ex) {
            loadUsers = false;
            Logger.getLogger(UserLogs_GUI.class.getName()).log(Level.SEVERE, null, ex);
        }      
        return loadUsers;
    }

