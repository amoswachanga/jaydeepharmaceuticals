    private void btnSearchActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSearchActionPerformed
        String query;
        if(user_id < 0 || !users_found){
           query  = "SELECT * FROM log ORDER BY `cur_time`;";
        }else{
            query = "SELECT * FROM log ORDER BY `cur_time` WHERE `user_id`="+(user_id+1)+";";
        }
        qtm = new QueryTableModel(query) ;  
        jTableMain.setModel(qtm);
    }//GEN-LAST:event_btnSearchActionPerformed

    private void jComboBoxMainActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBoxMainActionPerformed
        if(jComboBoxMain.getSelectedIndex() >= 0)
            user_id = jComboBoxMain.getSelectedIndex();
    }//GEN-LAST:event_jComboBoxMainActionPerformed

